<div class="mb-4">
  <!-- 1. Título da página -->
  <h1 class="mb-3">Solicitar Visita do Gerente</h1>

  <!-- Mensagens de flash (notice/alert) -->
  <% if flash[:notice].present? %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert].present? %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- Card contendo a confirmação de débito -->
  <div class="card shadow-sm">
    <div class="card-body">
      <!-- Parágrafo de confirmação -->
      <p class="mb-4">
        Confirma débito de 
        <strong class="text-danger">R$ 50,00</strong> 
        e envio da solicitação de visita do gerente?
      </p>

      <!--  Formulário de confirmação -->
      <%= form_with url: create_visita_conta_path(@conta),
                    method: :post,
                    local: true do |f| %>

        <div class="d-flex gap-2">
          <!-- Botão Confirmar -->
          <%= f.submit "Confirmar", class: "btn btn-primary" %>

          <!-- Botão Cancelar -->
          <%= link_to "Cancelar",
                      dashboard_path,
                      class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

