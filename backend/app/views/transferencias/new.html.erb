<!-- app/views/movimentacoes/transferencia.html.erb -->

<div class="mb-4">
  <!-- 1. Título da página -->
  <h1 class="mb-3">Transferência</h1>

  <!-- 2. Link “Voltar ao Dashboard” -->
  <div class="mb-4">
    <%= link_to "Voltar ao Dashboard",
                dashboard_path,
                class: "btn btn-outline-primary" %>
  </div>

  <!-- 3. Mensagens de flash (notice/alert) -->
  <% if flash[:notice].present? %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert].present? %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- 4. Erros de validação em @transferencia -->
  <% if @transferencia.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @transferencia.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- 5. Card que envolve o formulário -->
  <div class="card shadow-sm">
    <div class="card-body">
      <%= form_with model: @transferencia,
                    url: create_transferencia_conta_path(@conta_origem),
                    local: true,
                    data: { turbo: false } do |f| %>

        <!-- Conta de origem apenas para exibição -->
        <p class="mb-4">
          <strong>Conta de origem:</strong>
          <%= @conta_origem.correntista.conta_numero %>
        </p>

        <!-- Número da conta de destino -->
        <div class="mb-3">
          <%= f.label :destino_conta_numero,
                      "Número da conta de destino (5 dígitos):",
                      class: "form-label" %>
          <%= f.text_field :destino_conta_numero,
                           class: "form-control",
                           placeholder: "Ex.: 12345",
                           pattern: "[0-9]{5}",
                           required: true %>
        </div>

        <!-- Valor da transferência -->
        <div class="mb-3">
          <%= f.label :valor_transferido,
                      "Valor da Transferência (R$):",
                      class: "form-label" %>
          <%= f.text_field :valor_transferido,
                           class: "form-control",
                           placeholder: "0,00",
                           pattern: "[0-9]+([.,][0-9]{2})?",
                           required: true %>
        </div>

        <!-- Botões “Confirmar Transferência” e “Cancelar” -->
        <div class="d-flex gap-2">
          <%= f.submit "Confirmar Transferência",
                       class: "btn btn-primary" %>
          <%= link_to "Cancelar",
                      dashboard_path,
                      class: "btn btn-secondary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

