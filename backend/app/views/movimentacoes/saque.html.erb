<h1>Saque</h1>

<% if flash[:notice].present? %>
  <p style="color: green; font-weight: bold; margin-bottom: 1rem;">
    <%= flash[:notice] %>
  </p>
<% end %>

<% if flash[:alert].present? %>
  <p style="color: red; font-weight: bold; margin-bottom: 1rem;">
    <%= flash[:alert] %>
  </p>
<% end %>

<%= form_with url: create_saque_conta_path(@conta), method: :post, local: true, data: { turbo: false } do |f| %>
  <div>
    <%= f.label :valor_saque, "Valor do Saque (R$):" %><br>
    <%= f.text_field :valor_saque, required:true, pattern: "[0-9]+([.,][0-9]{2})?", placeholder: "0,00" %>
  </div>

  <div style="margin-top: 1rem;">
    <%= f.submit "Confirmar Saque", class: "btn btn-primary" %>
    <%= link_to "Cancelar", dashboard_path, class: "btn btn-secondary", style: "margin-left: 1rem;" %>
  </div>
<% end %>
